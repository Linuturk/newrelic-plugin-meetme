#!/bin/bash
# chkconfig: 2345 99 60
# description: newrelic-plugin-agent
# processname: {{ newrelic_plugin_daemon_name }}
# config: {{ newrelic_plugin_config_location }}/{{ newrelic_plugin_config_name }}
# pidfile: {{ newrelic_plugin_pid_location }}/{{ newrelic_plugin_pid_name }}

# Source function library.
. /etc/init.d/functions

# Application
APP="{{ newrelic_plugin_daemon_location }}/{{ newrelic_plugin_daemon_name }}"

# Configuration dir
CONFIG_DIR="{{ newrelic_plugin_config_location }}"

# PID File
PID_FILE="{{ newrelic_plugin_pid_location }}/{{ newrelic_plugin_pid_name }}"

# Additional arguments
OPTS=""

if [ -f /etc/sysconfig/newrelic-plugin-agent ]; then
  # Include configuration
  . /etc/sysconfig/newrelic-plugin-agent
fi

# Configuration file
CONF="${CONF:-${CONFIG_DIR}/{{ newrelic_plugin_config_name }}}"

if [ ! -f "${CONF}" ]; then
  echo -n $"cannot find newrelic-plugin-agent configuration file: '${CONF}'"
  failure $"cannot find newrelic-plugin-agent configuration file: '${CONF}'"
  echo
  exit 1
fi

OPTS="-c ${CONF} ${OPTS}"

dostatus() {
  [ -e "${PID_FILE}" ] || return 1

  local pid=$(cat ${PID_FILE})
  [ -d /proc/${pid} ] || return 1

  [ -z "$(grep ${APP} /proc/${pid}/cmdline)" ] && return 1
  return 0
}

start() {
  if [ ${EUID} -ne 0 ]; then
    echo -n $"you must be root"
    failure $"you must be root"
    echo
    return 1
  fi

  echo -n $"Starting ${APP}: "

  dostatus
  if [ $? -eq 0 ]; then
    echo -n $"cannot start ${APP}: already running (pid: $(cat ${PID_FILE}))";
    failure $"cannot start ${APP}: already running (pid: $(cat ${PID_FILE}))";
    echo
    return 1
  fi

  ${APP} ${OPTS} && success || failure
  RETVAL=$?

  echo
  return ${RETVAL}
}

stop() {
  if [ ${EUID} -ne 0 ]; then
    echo -n $"you must be root"
    failure $"you must be root"
    echo
    return 1
  fi

  echo -n $"Stopping ${APP}: "

  dostatus
  if [ $? -ne 0 ]; then
    echo -n $"cannot stop ${APP}: not running"
    failure $"cannot stop ${APP}: not running"
    echo
    return 1
  fi

  killproc -p "${PID_FILE}" "${APP}"
  RETVAL=$?
  [ ${RETVAL} -eq 0 ] && rm -f ${PID_FILE}
  echo
  return ${RETVAL}
}

restart() {
  stop
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  status)
    dostatus
    if [ $? -eq 0 ]; then
      echo $"${APP}: running"
      RETVAL=0
    else
      echo $"${APP}: not running"
      RETVAL=1
    fi
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart}"
    RETVAL=2
    ;;
esac

exit ${RETVAL}